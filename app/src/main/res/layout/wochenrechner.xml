<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">
        <TextView
            android:id="@+id/points"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#175c2c"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:paddingRight="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/diamant"
            />

        <TextView
            android:id="@+id/username"
            android:text="Anna"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#175c2c"
            android:textStyle="bold"
            android:textSize="30dp" />



    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#175c2c"
        android:autoText="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textview3"
            android:layout_width="65dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#80368a"
            android:autoText="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wochenrechner"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="22dp"
            android:textColor="#80368a"
            android:layout_gravity="center"
            android:id="@+id/ueberschrift"/>

        <TextView
            android:id="@+id/textview4"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="#80368a"
            android:layout_gravity="center"
            android:autoText="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_gravity="right"
            android:src="@drawable/close"
            android:id="@+id/closeMinigames" />
    </LinearLayout>
    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:text = "Name"
        android:paddingLeft="20dp"
        android:ems="10"
        android:hint ="Name"
        android:layout_marginTop="110dp"
        android:id="@+id/WochenrechnerName"
        android:layout_weight="0.06"
        android:background="@drawable/round_corners"
        android:textColor="#80368a" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/round_corners"
        android:layout_gravity="center"
        android:ems="10"
        android:text = "Geburtsdatum"
        android:hint ="Geburtstag"
        android:id="@+id/WochenrechnerDatum"
        android:layout_weight="0.06"
        android:textColor="#80368a" />

    <Button
        android:text="Alter berechnen"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:layout_gravity="center"
        android:textColor="#80368a"
        android:layout_marginTop="20dp"
        android:id="@+id/calculate" />
</LinearLayout>