<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textview3"
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#80368a"
            android:autoText="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kochbuchspiel"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="#80368a"
            android:id="@+id/ueberschrift"/>

        <TextView
            android:id="@+id/textview4"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="#80368a"
            android:layout_gravity="center"
            android:autoText="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_gravity="right"
            android:src="@drawable/close"
            android:id="@+id/closeMinigames" />

    </LinearLayout>


    <ImageView
        android:layout_width="305dp"
        android:layout_height="97dp"
        android:src="@drawable/deckel"
        android:layout_marginLeft="20dp"
        android:text="C" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" >


        <ImageView
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_05_1"
            android:layout_weight="1"
            android:id="@+id/bubble_4_1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_06_1"
            android:layout_weight="1"
            android:id="@+id/bubble_4_2"
            android:layout_marginLeft="-1dp" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_07_1"
            android:layout_weight="1"
            android:id="@+id/bubble_4_3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-2dp"
        android:layout_height="wrap_content" >

        <!-- Equal weights cause two columns of equal width. -->

        <ImageView
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_11_1"
            android:layout_weight="1"
            android:text="D"
            android:id="@+id/bubble_3_1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_09_1"
            android:layout_weight="1"
            android:text="E"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/bubble_3_2" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_10_1"
            android:layout_weight="1"
            android:text="E"
            android:layout_margin="0dp"
            android:id="@+id/bubble_3_3"
            android:layout_marginLeft="-1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-4dp"
        android:id="@+id/linelayout"
        android:background="#a66bb0"
        android:layout_height="wrap_content" >

        <!-- Equal weights cause two columns of equal width. -->

        <ImageView
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:src="@drawable/glas_12_1"
            android:text="D"
            android:id="@+id/bubble_2_1"
            android:layout_marginTop="-1dp" />

        <ImageView
            android:layout_width="102dp"
            android:layout_height="98dp"
            android:src="@drawable/glas_13_1"
            android:layout_weight="1"
            android:text="E"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-1dp"
            android:id="@+id/bubble_2_2" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="102dp"
            android:src="@drawable/glas_14_1"
            android:text="E"
            android:layout_margin="0dp"
            android:id="@+id/bubble_2_3"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-3dp"
            android:elevation="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-8dp"
        android:layout_height="wrap_content" >

        <!-- Equal weights cause two columns of equal width. -->

        <ImageView
            android:layout_width="104dp"
            android:layout_height="101dp"
            android:src="@drawable/glas_17_1"
            android:layout_weight="1"
            android:text="D"
            android:id="@+id/bubble_1_1"
            android:layout_marginTop="-1dp" />

        <ImageView
            android:layout_height="101dp"
            android:src="@drawable/glas_18_1"
            android:layout_weight="1"
            android:background="#7f368a"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-2dp"
            android:layout_width="101dp"
            android:id="@+id/bubble_1_2" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:src="@drawable/glas_16_1"
            android:layout_weight="1"
            android:text="E"
            android:layout_margin="0dp"
            android:id="@+id/bubble_1_3"
            android:paddingLeft="-3dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-2dp"/>
    </LinearLayout>

</LinearLayout>