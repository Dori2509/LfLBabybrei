<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitte geb hier deinen Namen, den Namen deines Kindes und das Geburtsdatum des Kindes ein. Die Daten bleiben bei dir und werden nicht weitergeleitet oder weitergegeben."
        android:textSize="15dp"
        android:layout_marginTop="100px"
        android:layout_marginLeft="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/round_corners"
        android:ems="10"
        android:paddingLeft="20dp"
        android:text = "Name"
        android:hint ="Name"
        android:id="@+id/nameEingabe"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColor="?attr/colorButtonNormal"
        android:layout_weight="0.08" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/round_corners"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:text = "Name deines Kindes"
        android:ems="10"
        android:hint ="Name des Kindes"
        android:layout_marginTop="20dp"
        android:id="@+id/babynameEingabe"
        android:layout_weight="0.06"
        android:textColor="?attr/colorButtonNormal" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:ems="10"
        android:text = "Geburtsdatum deines Kindes"
        android:hint ="Geburtstag"
        android:id="@+id/birthdayEingabe"
        android:background="@drawable/round_corners"
        android:layout_weight="0.06"
        android:textColor="?attr/colorButtonNormal" />

    <Button
        android:text="Speichern"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:id="@+id/saveButton"
        android:layout_weight="0.06" />
</LinearLayout>